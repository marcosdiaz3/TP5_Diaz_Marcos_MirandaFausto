public class Punto2 {

         public static void main(String[] args) throws Exception {
        Scanner sc = new Scanner(System.in);

        
        System.out.print("Ingrese un número entero: ");
        int numero = sc.nextInt();

        if (numero % 2 == 0) {
            System.out.println("El número es par. Triple: " + (numero * 3));
        } else {
            System.out.println("El número es impar. Doble: " + (numero * 2));
        }

        sc.close();
    }
}